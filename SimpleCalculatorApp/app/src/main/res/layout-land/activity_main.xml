<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csdelta.haroon.simplecalculatorapp.MainActivity"
    android:orientation="vertical"
    android:background="#000"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/green"
        android:background="#000"
        android:layout_weight="2"
        android:layout_margin="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewCalculator"
            android:layout_weight="35"
            android:layout_gravity="center"
            android:textSize="28sp"
            android:gravity="center"
            android:background="#fff"
            android:textColor="#000" />

        <Button
            android:text="clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            style="@style/darkGreyBtnright"
            android:id="@+id/clear_btn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:id="@+id/bigBlueBox"
        android:background="#000"
        android:layout_weight="7"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000"
            android:layout_weight="5"
            android:id="@+id/yellowBox1"
            >

            <Button
                android:text="sin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/darkGreyBtn"
                android:id="@+id/sin_btn" />
            <Button
                android:text="COS"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/darkGreyBtn"
                android:id="@+id/cos_btn"/>
            <Button
                android:text="tan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/darkGreyBtn"
                android:id="@+id/tan_btn" />
            <Button
                android:text="pi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/darkGreyBtn"
                android:id="@+id/pi_btn" />
            <Button
                android:text="!"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/darkGreyBtn"
                android:id="@+id/not_btn" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000"
            android:id="@+id/yellowBox2"
            android:layout_marginRight="30dp"
            >
            <Button
                android:text="ln"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/darkGreyBtn"
                android:id="@+id/ln_btn" />
            <Button
                android:text="log"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/darkGreyBtn"
                android:id="@+id/log_btn" />
            <Button
                android:text="e"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/darkGreyBtn"
                android:id="@+id/e_btn" />
            <Button
                android:text="^"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/darkGreyBtn"
                android:id="@+id/power_btn" />
            <Button
                android:text="sqrt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/darkGreyBtn"
                android:id="@+id/sqrt_btn" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000"
            android:id="@+id/blackBox"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#000"
                android:id="@+id/greenBox1"
                android:layout_weight="1">

                <Button
                    android:text="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/lightGrey"
                    android:id="@+id/seven_btn" />
                <Button
                    android:text="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/lightGrey"
                    android:id="@+id/eight_btn" />
                <Button
                    android:text="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/lightGrey"
                    android:id="@+id/nine_btn" />
                <Button
                    android:text="/"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/darkGreyBtnright"
                    android:id="@+id/divide_btn" />
                <Button
                    android:text="("
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/darkGreyBtnright"
                    android:id="@+id/bo_btn" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#000"
                android:id="@+id/greenBox2"
                android:layout_weight="1">

                <Button
                    android:text="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/lightGrey"
                    android:id="@+id/four_btn" />
                <Button
                    android:text="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/lightGrey"
                    android:id="@+id/five_btn" />
                <Button
                    android:text="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/lightGrey"
                    android:id="@+id/six_btn" />
                <Button
                    android:text="X"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/darkGreyBtnright"
                    android:id="@+id/X_btn" />
                <Button
                    android:text=")"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/darkGreyBtnright"
                    android:id="@+id/bc_btn" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#000"
                android:id="@+id/blueBox"
                android:layout_weight="2"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/redBoxSmall"
                    android:background="#000"
                    android:layout_weight="4">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#000"
                        android:id="@+id/grey1">

                        <Button
                            android:text="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/lightGrey"
                            android:id="@+id/one_btn" />
                        <Button
                            android:text="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/lightGrey"
                            android:id="@+id/two_btn" />
                        <Button
                            android:text="3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/lightGrey"
                            android:id="@+id/three_btn" />
                        <Button
                            android:text="-"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/darkGreyBtnright"
                            android:id="@+id/subtract_btn" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#000"
                        android:id="@+id/grey2">
                        >
                        <Button
                            android:text="0"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            style="@style/lightGrey"
                            android:id="@+id/zero_btn" />
                        <Button
                            android:text="."
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/lightGrey"
                            android:id="@+id/dot_btn" />
                        <Button
                            android:text="+"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/darkGreyBtnright"
                            android:id="@+id/add_btn" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:text="="
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/darkGreyBtnright"
                    android:id="@+id/equal_btn" />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</LinearLayout>
